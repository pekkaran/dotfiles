#!/bin/bash
# Open a file in git tree using fzf or dmenu. Extremely useful.

VIM=vim
if type nvim > /dev/null 2>&1; then
  VIM=nvim
fi

if type fzf > /dev/null 2>&1; then
  git ls-files &> /dev/null || exit
  gtdir="$(git rev-parse --show-toplevel )"
  if type bat > /dev/null 2>&1; then
    # Options also set via `~/.config/bat/config`.
    $VIM $(git ls-files "$gtdir" | fzf --preview "bat --line-range=:500 {}")
  else
    $VIM $(git ls-files "$gtdir" | fzf --preview "cat {}")
  fi
else
  $VIM $(gitbrowse)
fi
